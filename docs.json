{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Karibu Docs",
  "colors": {
    "primary": "#003d4a",
    "light": "#fddf0d",
    "dark": "#fddf0d"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "index",
              "signup",
              "quickstart",
              "security-notes",
              "error-handling",
              "best-practices"
            ]
          },
          {
            "group": "Working Environment",
            "pages": [
              "guides/workspaces",
              "guides/developer-apps"
            ]
          },
          {
            "group": "Messaging",
            "pages": [
              "guides/messaging",
              "guides/campaigns"
            ]
          },
          {
            "group": "OTP",
            "pages": [
              "guides/otp-requesting-codes",
              "guides/otp-validating-codes"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API Routes",
            "openapi": "openapi.json"
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:sms@briq.tz"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://briq.tz/login"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/karibubriq",
      "github": "https://github.com/briq-block",
      "linkedin": "https://linkedin.com/company/briq-solutions-inc"
    }
  },
  "openapi": [
    "openapi.json"
  ],
  "api": {
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": [
        "curl",
        "python",
        "javascript"
      ],
      "defaults": "required"
    },
    "mdx": {
      "server": [
        "http://karibu.briq.tz",
        "https://karibu.briq.tz"
      ],
      "auth": {
        "method": "bearer",
        "name": "Authorization",
        "placeholder": "X-API your_api_token_here"
      }
    }
  }
}